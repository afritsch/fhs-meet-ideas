<div class="fields">
  <%= f.label :date, t("projects.form.date") %>
  <%- date_string = f.object.date && l(f.object.date) -%>
  <%= f.text_field :date, :class => "timepicker", :value => date_string %>
  <%= f.label :description, t("projects.form.appointment_description") %>
  <%= f.text_field :description %>
  <%= link_to_remove_fields t("projects.form.remove_appointment"), f %>
</div>