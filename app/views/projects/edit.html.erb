<% content_for :title, "Projekt " + @project.title + " bearbeiten" %>

<h1>Projekt bearbeiten</h1>

<%= form_for(@project) do |f| %>
  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Änderungen speichern" %>
  </p>
<% end %>

<%= link_to "Zurück", projects_path %>