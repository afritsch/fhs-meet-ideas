<% content_for :title, t(".title") %>

<h1><%= t(".title") %></h1>

<%= link_to t(".new_project"), new_project_path %>

<ul>
  <% @projects.each do |project| %>
      <li>
          <a href="<%= url_for(project) %>"><%= truncate(project.title, :length => 60) %></a><br />
          <%= project.status %><br />
          <%= truncate(project.description, :length => 160) %>
      </li>
  <% end %>
</ul>
