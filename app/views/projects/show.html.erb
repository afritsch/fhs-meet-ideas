<% content_for :title, @project.title %>

<h1><%= @project.title %></h1>

<%= t(".status") %>: [<%= @project.status %>]<br />
<div><%= t(".description") %>: <%= simple_format(h(@project.description)) %></div>

<ul>
  <% @roles.each do |role| %>
    <li>
      <%= role.title %>: <%= role.firstname %> <%= role.lastname %>
    </li>
  <% end %>
</ul>

<ul>
<% @appointments.each do |appointment| %>
  <li><%= appointment.appointment.strftime('%d.%m.%Y, %H:%Mh') %> - <%= appointment.description %></li>
<% end %>
</ul>

<ul>
<% @pictures.each do |picture| %>
  <li><%= image_tag(picture.path) %></li>
<% end %>
</ul>

<ul>
<% @comments.each do |comment| %>
  <li><%= comment.firstname %> <%= comment.lastname %> <%= t(".timeText") %> <%= comment.created_at.strftime('%d.%m.%Y, %H:%Mh') %>:<br />
    <%= simple_format(h(comment.content)) %><br />
  </li>
<% end %>
</ul>

<p><%= link_to t(".edit"), edit_project_path(@project) %></p>
<p><%= link_to t(".back"), projects_path %></p>
<p><%= link_to t(".delete"), project_path(@project), :method => :delete, :confirm => t(".deleteConfirmation") %></p>