<% content_for :title, @project.title %>

<h1><%= @project.title %></h1>

<p><%= t(".published_by") %>: <%= @project.firstname %> <%= @project.lastname %></p>

<%= t(".status") %>: [<%= @project.status %>]<br />
<div><%= t(".description") %>: <%= simple_format(h(@project.description)) %></div>

<%= t("projects.headlines.roles") %><br />
<ul>
  <% @roles.each do |role| %>
    <li>
      <%= role.title %>: <%= role.firstname %> <%= role.lastname %>
    </li>
  <% end %>
</ul>

<%= t("projects.headlines.appointments") %>:<br />
<ul>
<% @appointments.each do |appointment| %>
  <li><%= appointment.date.strftime("%d.%m.%Y, %H:%Mh") %> - <%= appointment.description %></li>
<% end %>
</ul>

<%= t("projects.headlines.pictures") %>:<br />
<ul>
<% @pictures.each do |picture| %>
  <li><%= image_tag(picture.path) %></li>
<% end %>
</ul>

<%= t("projects.headlines.comments") %>:<br />
<ul>
<% @comments.each do |comment| %>
  <li><%= comment.firstname %> <%= comment.lastname %> <%= t(".timeText") %> <%= comment.created_at.strftime("%d.%m.%Y, %H:%Mh") %>:<br />
    <%= simple_format(h(comment.content)) %><br />
  </li>
<% end %>
</ul>
<%= form_for([@project, @project.comments.build]) do |f| %>
  <div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label :content, t("projects.form.label_comment") %><br />
    <%= f.text_area :content, :rows => 3 %>
  </div>
  <div>
    <%= f.submit t("common.send") %>
  </div>
<% end %>

<p><%= link_to t("common.back"), projects_path %></p>
<% if allowed? %>
  <p><%= link_to t("common.edit"), edit_project_path(@project) %></p>
  <p><%= link_to t("common.delete"), project_path(@project), :method => :delete, :confirm => t(".deleteConfirmation") %></p>
<% end %>