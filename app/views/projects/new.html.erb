<%= form_for(@project) do |f| %>
  <div>
    <label for="project_title">Titel:</label><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <label for="project_status">Status:</label><br />
    <%= f.text_field :status %>
  </div>
